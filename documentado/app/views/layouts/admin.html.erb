<!DOCTYPE html>
<html>
  <head>
    <title>Administración</title>
    <%= tag :meta, :"http-equiv" => "Content-Type", :content => "text/html; charset=utf-8" %>
    <%= tag :meta, :lang => :es, :name => :author, :content => "Xaver" %>
    <%= tag :meta, :lang => :es, :name => :language, :content => :es %>
    <%= stylesheet_link_tag :admin, :media => :all %>
    <%= javascript_include_tag :admin %>
    <%= favicon_link_tag %>
    <%= csrf_meta_tags %>

    <!--[if lt IE 9]><%= javascript_include_tag "http://html5shim.googlecode.com/svn/trunk/html5.js" %><![endif]-->
  </head>
  <body>
    <div class="navbar navbar-fixed-top">
      <div class="navbar-inner">
        <div class="container-fluid">
          <a class="btn btn-navbar" data-target=".nav-collapse" data-toggle="collapse">
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
          </a>
          <%= link_to "Administración", admin_root_path, :class => :brand %>
          <div class="nav-collapse">
            <ul class="nav pull-right">
              <li class="divider-vertical"></li>
              <li class="dropdown">
                <a class="dropdown-toggle" data-toggle="dropdown" href="#">
                  <%= current_user %>
                  <b class="caret"></b>
                </a>
                <ul class="dropdown-menu">
                  <li><%= link_to "Ver sitio", root_path %></li>
                  <li><%= link_to "Editar Perfil", edit_admin_usuario_path(current_user) %></li>
                  <li class="divider"></li>
                  <li><%= link_to "Cerrar Sesión", logout_path %></li>
                </ul>
              </li>
              <li class="divider-vertical"></li>
              <%= link_to '', 'http://www.xaver.com.ar', :class => :logo, :title => "Xaver soluciones + tecnología", :target => :_blank %>
            </ul>
          </div>
        </div>
      </div>
    </div>
    <div class="container-fluid">
      <div class="content">
        <div class="row-fluid">
          <div class="span3">
            <nav class="well">
              <ul class="nav nav-list">
                <li class="nav-header">Administración</li>
                <li><%= link_to "Usuarios" , admin_usuarios_path  if can? :index, Usuario %></li>
                <li><%= link_to "Consultas", admin_consultas_path if can? :index, Consulta %></li>
              </ul>
            </nav>
          </div>
          <div class="span9">
            <section id ="flash">
              <%= mensajes_flash %>
            </section>
            <%= yield %>
          </div>
        </div>
      </div>
    </div>
  </body>
</html>