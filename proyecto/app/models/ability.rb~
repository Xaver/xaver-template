# -*- encoding : utf-8 -*-
class Ability
  include CanCan::Ability

  def initialize(usuario)
    
    usuario ||= Usuario.new

    
    if usuario.rol_es? :superadmin
      can :manage, :all
    end
    
    if usuario.rol_es? :admin
      can :manage, Categoria
      can :manage, Producto
      can :manage, Foto
      can :manage, Consulta
      can :update, usuario
    end
    
  end
end
