# -*- encoding : utf-8 -*-
class ApplicationController < ActionController::Base

  before_filter :restringir_dominios

  DOMINIOS = ['URL']
  DOMINIO_PRINCIPAL = DOMINIOS.first

  def restringir_dominios
    if Rails.env.production? && !request.env['HTTP_HOST'].in?(DOMINIOS)
      # HTTP 301 is a "permanent" redirect
      redirect_to "http://#{DOMINIO_PRINCIPAL}", :status => 301
    end
  end

end
